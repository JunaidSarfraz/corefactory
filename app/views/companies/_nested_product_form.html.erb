<tr>
  <td>Name</td>
  <td>
    <%= f.hidden_field :id %>
    <%= f.text_field :name, :class => 'form-control btn-block btn-block-level-input' %>
  </td>
</tr>
<tr>
  <td>Description</td>  
  <td><%= f.text_field :description, :class => 'form-control btn-block btn-block-level-input' %></td>
</tr>
<tr>
  <td>Type</td>
  <td><%= f.text_field :_type, :class => 'form-control btn-block btn-block-level-input' %></td>
</tr> 
<tr>
  <td>Category</td>
  <td><%= f.text_field :category, :class => 'form-control btn-block btn-block-level-input' %></td>
</tr>
<tr>
  <td>Cost</td> 
  <td><%= f.number_field :cost, :class => 'form-control btn-block btn-block-level-input' %></td>
</tr>
<tr>
  <td>Selling Price</td>
  <td><%= f.number_field :sale_price, :class => 'form-control btn-block btn-block-level-input' %></td>  
</tr>
<tr>
  <td>Max Discount</td>
  <td><%= f.number_field :max_discount, :class => 'form-control btn-block btn-block-level-input' %></td>  
</tr>
<tr>
  <td>Max Discount percentage</td>
  <td><%= f.number_field :discount_percentage, :class => 'form-control btn-block btn-block-level-input percentage-input' %></td>  
</tr>
<tr> 
  <td>&nbsp</td>
  <td>
    <%= f.link_to_remove "Remove This Product" %>
  </td>
</tr>