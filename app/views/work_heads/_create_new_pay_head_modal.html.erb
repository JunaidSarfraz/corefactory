<div id="create_new_pay_head<%= branch_id %>" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create New Work Head</h4>
      </div>
      <%= form_tag(work_heads_path, method: "post") do %>
        <div class="modal-body">
          <%= label_tag "Name", nil, :class => "pull-left" %>
          <%= text_field_tag :name, nil, class: "btn-block btn-block-level-input", id: "work_head_name" %>
          <%= label_tag "Work Description", nil, :class => "pull-left" %>
          <%= text_field_tag :work_description,nil,class: "btn-block btn-block-level-input",id: "work_head_description" %>
          <%= label_tag "Number of Items", nil, :class => "pull-left" %>
          <%= number_field_tag :number_of_items, nil, class: "btn-block btn-block-level-input", id: "work_head_items" %>
          <%= label_tag "Pay", nil, :class => "pull-left" %>
          <%= number_field_tag :pay, nil, class: "btn-block btn-block-level-input", id: "work_head_pay" %>
          <%= hidden_field_tag :branch_id, branch_id %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= submit_tag "Create", class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>