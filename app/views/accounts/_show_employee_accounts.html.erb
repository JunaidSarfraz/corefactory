<% if employee_accounts.count > 0 %>
	<table class="table table-striped table-bordered">
		<thead>
	        <th>Title</th>
	        <th>Description</th>
	        <th>Account Holder</th>
	        <th>Current Balance</th>
	        <th>&nbsp</th>
	        <th>&nbsp</th>
	        <th>&nbsp</th>
	      </thead>
	      <tbody>
	      	<% employee_accounts.each do |employee_account| %>
		          <tr>
		            <td><%= employee_account.title %></td>
		            <td><%= employee_account.description %></td>
		            <td><%= employee_account.user.first_name + employee_account.user.last_name %></td>
		            <td><%= employee_account.current_balance %></td>
		            <td><%= link_to "Show",  "#", :class => "btn btn-primary" %></td>
		            <td><%= link_to "Edit",  "#", :class => "btn btn-primary" %></td>
		            <td><%= link_to "Delete", "#", :class => "btn btn-primary delete_account", :'account-id' => employee_account.id, :'tab-identity' => "employee" %></td>
		          </tr>
	       	<% end %>
	      </tbody>
	</table>
<% else %>
    <h2>No Employee Accounts to Show</h2>
<% end %>